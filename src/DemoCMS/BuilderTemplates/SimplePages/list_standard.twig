{% container PageList %}
<div class="pageList">
{% for page in pages %}
	<div class="pageOverview clearAfter">
		<div class="createdOn">Vytvo≈ôeno: {{ page.createdOn|date }}</div>
		<div class="title">
			<h3><a href="{{ BASE_HREF ~ page.urlName }}">{{ page.title }}</a></h3>
		</div>
		{% if page.contentItem.titleImage %}
			<div class="titleImage">
				<a href="{{ BASE_HREF ~ page.urlName }}">
					<img src="{{ page.contentItem.titleImage.filenameThumb }}" alt="{{ page.title }}" title="{{ page.title }}" />
				</a>
			</div>
		{% endif %}
		<div class="content">
			{{ page.contentItem.perex|raw }}
		</div>
	</div>
{% endfor %}
</div>